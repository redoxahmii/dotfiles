{
  "layer": "top",
  "ipc": true,
  "position": "top",
  "height": 30,
  "modules-left": ["hyprland/workspaces", "hyprland/submap", "custom/spotify"],
  "modules-center": ["hyprland/window"],
  "on-click-right": "pkill -SIGUSR1 waybar",
  "on-click-left": "pkill -SIGUSR2 waybar",
  "layer-shell": {
    "exclusive-zone": true,
    "visibility": "toggleable"
  },
  "modules-right": [
    "custom/pomodoro",
    "pulseaudio",
    "network",
    "cpu",
    "memory",
    "battery",
    "tray",
    "clock"
  ],
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "ÓùÖ",
      "2": "ÔÑ°",
      "3": "ÔÑ•",
      "4": "ÔÑ†",
      "5": "ÔÄ•",
      "6": "Ôúô",
      "urgent": "ÔÅ™",
      "focused": "ÔÜí",
      "default": "ÔÑë"
    },
    "persistent-workspaces": {
      "*": 5,
      "HDMI-A-1": 5
    }
  },
  "hyprland/submap": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "hyprland/window": {
    "separate-outputs": true,
    "truncate-text": true,
    // "rewrite": {
    //   "(.*) ‚Äî Mozilla Firefox": "ÓùÖ &#x202c;$1",
    //   // "tmux": "> [$1]",
    //   "ta": "üåé"
    // },
    // window#waybar.solo
    "truncate-text-limit": 30
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip": false,
    "format-alt": "{:%A %d %b %Y }"
  },
  "cpu": {
    "format": "{usage}%  Ôãõ",
    "interval": 5
  },
  "memory": {
    "format": "{}%  ÔÉâ",
    "interval": 5
  },
  "battery": {
    "bat": "BAT0",
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}%  {icon}",
    "format-charging": " {capacity}%  <span>ÔÉß</span>",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "interval": 15,
    "on-click": "$HOME/.config/waybar/scripts/waybar-battery.sh"
  },
  "network": {
    "format-wifi": "{essid} ({signalStrength}%)  Ôá´",
    "format-ethernet": "{ifname}: {ipaddr}/{cidr}  ÔÉÅ",
    "format-disconnected": "Disconnected  ‚ö†",
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    //"scroll-step": 1,
    "format": "{volume}%  {icon}",
    "format-bluetooth": "{volume}% {icon}Ôäî",
    "format-muted": "ÔÄ¶",
    // ISSUE: icons not working because runs it through easyeffect sink
    "format-icons": {
      "headphones": "ÔÄ•",
      "handsfree": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄß", "ÔÄ®"]
    },
    "on-click": "pavucontrol"
  },
  "custom/spotify": {
    "format": "{}",
    "max-length": 40,
    "interval": 30,
    "exec": "$HOME/.config/waybar/scripts/player_status.sh 2> /dev/null",
    "exec-if": "pgrep -f 'chrome|firefox'",
    "on-click": "playerctl play-pause"
  },
  "custom/pomodoro": {
    "format": "{}",
    "return-type": "json",
    "exec": "~/.local/bin/waybar-module-pomodoro --no-icons",
    "on-click": "~/.local/bin/waybar-module-pomodoro toggle",
    "on-click-right": "~/.local/bin/waybar-module-pomodoro reset"
  }
}
